@model MVC_jobproject.Models.Logincls
@{
    ViewBag.Title = "Login_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<div>
    @using(Html.BeginForm("Login_click","UserLog",FormMethod.Get))
            {
                <div>
                    <label>Username:</label>
                </div>
                <div>
                    @Html.TextBoxFor(m=>m.uname)
                    @Html.ValidationMessageFor(m=>m.uname)
                </div>
                <div>
                    <label>Password:</label>
                </div>
                <div>
                    @Html.PasswordFor(m=>m.pwd)
                    @Html.ValidationMessageFor((m=>m.pwd))
                </div>
                <div>
                    <input type="submit" value="Login" />
                    @Html.DisplayFor(m=>m.msg)
                </div>
            }
</div>
<div>
    @Html.ActionLink("User Registration", "Insertuser_Pageload","UserReg")
</div>
<div>
    @Html.ActionLink("Company Registration", "Insertcomp_Pageload","CompanyReg")
</div>

